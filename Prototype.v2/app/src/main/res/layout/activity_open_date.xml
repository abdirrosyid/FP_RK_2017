<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dtk_pc.calendarcoba.OpenDateActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoCal"
        android:text="Go to Calendar"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below= "@+id/btnGoCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:id="@+id/date"/>

    <EditText
        android:id="@+id/inputAgenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date"
        android:layout_marginStart="14dp"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Agenda" />

    <Button
        android:id="@+id/addAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Agenda"
        android:layout_below="@+id/inputAgenda"
        android:layout_alignStart="@+id/inputAgenda" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_alignEnd="@+id/btnGoCal"
        android:layout_below="@+id/inputAgenda"
        android:layout_marginTop="52dp" />


</RelativeLayout>
